<p id="notice"><%= notice %></p>

<h1>Listing Applications</h1>

<table>
  <thead>
    <tr>
      <th>Hourly</th>
      <th>Freelancer information</th>
      <th>Post</th>
      <th>Description</th>
      <th>Amount</th>
      <th>Payment protection</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applications.each do |application| %>
      <tr>
        <td><%= application.hourly %></td>
        <td><%= application.freelancer_information %></td>
        <td><%= application.post %></td>
        <td><%= application.description %></td>
        <td><%= application.amount %></td>
        <td><%= application.payment_protection %></td>
        <td><%= link_to 'Show', application %></td>
        <td><%= link_to 'Edit', edit_application_path(application) %></td>
        <td><%= link_to 'Destroy', application, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

