      <!--/col-3-->
      <div class="col-sm-9" contenteditable="false" style="">
        <div class="panel panel-default">
          <div class="panel-heading"><%= @user.title%>'s Bio</div>
          <% if @user.information.description %>
            <div class="panel-body"> <%= @user.information.description %></div>
          <% else %>
            <div class="panel-body"> None entered yet. </div>
          <% end %>
        </div>
        <div class="panel panel-default target">
          <div class="panel-heading" contenteditable="false">Skills</div>
          <div class="panel-body">
            <div class="row">
              <% if @user.freelancer %>
                <% @user.skills.each do |skill|%>
                  <div class="col-md-4">
                    <div class="thumbnail">
                      <div class="caption">
                        <h3><%= skill.title %></h3>
                        <p>Years Experience: <%= skill.years %></p>
                        <p></p>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
