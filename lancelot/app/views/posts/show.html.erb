<p id="notice"><%= notice %></p>



<div class="container">
	<div class="row">
		<div class="col-md-10">
			<h2>
			  <%= @post.title %>
			</h2>
		</div>
		<div class="col-md-2">
			<h2>
				<% if current_user.applied(@post) %>
			  	<%= link_to "You've already applied!", application_path(Application.where(post_id: @post.id, freelancer_information_id: current_user.freelancer_information.id).first), class: "btn btn-success" %>
				<% else %>
			  	<%= link_to "Apply", new_application_path(post_id: @post.id), class: "btn btn-primary" %>
				<% end %>
			</h2>
		</div>
	</div>

	<p>
	  <%= @post.description %>
	</p>
	
	<p>
		<strong>Posted by:</strong>
		<%= link_to @post.poster_information.user.email, user_path(@post.poster_information.user.id) %> 
	</p>

	<p>
		<strong>Posted on:</strong>
		<%= @post.created_at.strftime("%B %d, %Y at %I:%M%p") %> 
	</p>

	<%= link_to 'Edit', edit_post_path(@post) %> |
	<%= link_to 'Back', posts_path %>
</div>

